<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Text?>
<StackPane xmlns:fx = "http://javafx.com/fxml"
           fx:controller="sample.Controller">
    <Rectangle fx:id="rectangle" arcHeight="20" arcWidth="20"
               fill="lightskyblue" width="400" height="60">
        <effect>
            <DropShadow fx:id = "dropshadow" color="GRAY" offsetY="3.0"/>
        </effect>

    </Rectangle>

    <Text fx:id="text" fill="darkslategray"
          style="-fx-font-weight: bold;-fx-font-size: 32"
          effect="$dropshadow"
          text="Hello"></Text>

</StackPane>